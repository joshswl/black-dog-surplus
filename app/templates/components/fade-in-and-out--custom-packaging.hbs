{{yield}}
<div class="custom-packaging">
  <div class="section">
    <div class="container">
      <div class="page-header">
        <h1 class="align-center page-header--text">custom packaging</h1>
      </div>
      <div class="custom-packaging__grid">

        {{#each items as |item|}}
        <div class="flex custom-packaging__grid--item">
          <img class="custom-packaging__image" src="{{item.image}}" alt="">
          <div class="custom-packaging__text">
            <h2 class="custom-packaging__number">{{item.number}}</h2>
            <h3 class="custom-packaging__title">{{item.title}}</h3>
            <p>{{item.desc}}</p>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>